<Page
    x:Class="App1.Views.AllSessions"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:App1.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:valueconverter="using:App1.Utils"
    xmlns:UI="using:Microsoft.Advertising.Mobile.UI"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <Page.Resources>
        <valueconverter:DateToStringConverter x:Key="DateToStringConverter" />
        <valueconverter:CurrencyForegroundConverter x:Key="CurrencyForegroundConverter" />
        <valueconverter:StringToCurrencyConverter x:Key="StringToCurrencyConverter" />
        <DataTemplate x:Key="AllSessionsTemplate">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="250"/>
                    <ColumnDefinition Width="150"/>
                </Grid.ColumnDefinitions>
                <Rectangle Grid.Row="0" Grid.ColumnSpan="2" Fill="#FF428bca" Width="400"/>
                <TextBlock Margin="10,0,0,0" Grid.Row="0" Grid.ColumnSpan="2" Text="{Binding EndDate, Converter={StaticResource DateToStringConverter}}" Style="{ThemeResource ListViewItemTextBlockStyle}"/>

                <TextBlock Margin="10,0,0,0" Grid.Row="1" Grid.Column="0" Style="{ThemeResource ListViewItemTextBlockStyle}">
                    <Run Text="{Binding Location}" />
                    <Run Text="{Binding Duration}"  />
                </TextBlock>
                <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding Profit,Converter={StaticResource StringToCurrencyConverter}}" 
                           Foreground="{Binding Profit, Converter={StaticResource CurrencyForegroundConverter}}" Style="{ThemeResource ListViewItemTextBlockStyle}"/>
                <TextBlock Margin="10,0,0,0" Grid.Row="2"  Grid.ColumnSpan="2" Style="{ThemeResource ListViewItemTextBlockStyle}">
                    <Run Text="{Binding Stakes}" />
                    <Run Text="{Binding GameName}"  />
                </TextBlock>
            </Grid>
        </DataTemplate>
    </Page.Resources>
    
    <Page.BottomAppBar>
        <CommandBar x:Name="bottomAppBar">
            <AppBarButton x:ConnectionId='1' Icon="Add" Label="Add"                        />
            <AppBarButton x:ConnectionId='2' Icon="Home" Label="Home"                         />
        </CommandBar>
    </Page.BottomAppBar>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <ListView x:ConnectionId='3' x:Name="SessionsListView" Grid.Row="0" ItemsSource="{Binding}" ItemTemplate="{StaticResource AllSessionsTemplate}" IsItemClickEnabled="True"                           />
        <!--<UI:AdControl Grid.Row="1" AutoRefreshIntervalInSeconds="60"  ApplicationId="test_client" AdUnitId="Image320_50" HorizontalAlignment="Left" 
              Height="50" IsAutoRefreshEnabled="True" VerticalAlignment="Bottom" Width="400"/>-->
    </Grid>
</Page>

