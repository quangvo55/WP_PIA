<Page
    x:Class="App1.Views.SessionPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:App1.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    
    <Page.BottomAppBar>
        <CommandBar x:Name="bottomAppBar">
            <AppBarButton x:ConnectionId='1' Icon="Play" Label="Start"                          />
            <AppBarButton x:ConnectionId='2' Icon="Delete" Label="Delete"                           />
            <AppBarButton x:ConnectionId='3' Icon="Save" Label="Save"                         />
            <AppBarButton x:ConnectionId='4' Icon="Cancel" Label="Cancel"                           />
        </CommandBar>
    </Page.BottomAppBar>
    
    <Grid x:Name="LayoutRoot" Background="Transparent">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,0">
            <TextBlock Text="Cash Games" FontSize="32" HorizontalAlignment="Left" />
        </StackPanel>
        
        <ScrollViewer Grid.Row="1" Height="auto" VerticalScrollBarVisibility="Visible" AllowDrop="False">
        
            <StackPanel Grid.Row="1" Margin="10,0,0,0">
                <TextBlock Text="Stakes" FontSize="16" HorizontalAlignment="Left"/>
                <ComboBox  x:Name="stakesComboBox" Width="380" VerticalAlignment="Top" Margin="0,0,10,0" HorizontalAlignment="Left" >
                    <ComboBoxItem Content="$1/$2" IsSelected="True"/>
                    <ComboBoxItem Content="$1/$3"/>
                    <ComboBoxItem Content="$2/$5" />
                    <ComboBoxItem Content="$5/$10"/>
                </ComboBox>

                <TextBlock Text="Games" FontSize="16" HorizontalAlignment="Left"/>
                <ComboBox  x:Name="gamesComboBox" Width="380" VerticalAlignment="Top" Margin="0,0,10,0" HorizontalAlignment="Left">
                    <ComboBoxItem Content="No Limit Holdem" IsSelected="True"/>
                    <ComboBoxItem Content="Holdem"/>
                    <ComboBoxItem Content="Limit" />
                    <ComboBoxItem Content="PL Omaha"/>
                </ComboBox>

                <TextBlock Text="Location" FontSize="16" HorizontalAlignment="Left"/>
                <ComboBox  x:Name="locationComboBox" Width="380" VerticalAlignment="Top" Margin="0,0,10,0" HorizontalAlignment="Left">
                    <ComboBoxItem Content="Casino" IsSelected="True"/>
                    <ComboBoxItem Content="Online"/>
                    <ComboBoxItem Content="Homegame" />
                </ComboBox>
                
                <!--<TextBlock Text="Limit Type" FontSize="16" HorizontalAlignment="Left"/>
                <ComboBox  x:Name="limitListPicker" Width="350" VerticalAlignment="Top" HorizontalAlignment="Left" >
                    <ComboBoxItem Content="No" IsSelected="True"/>
                    <ComboBoxItem Content="Pot"/>
                    <ComboBoxItem Content="Limit" />
                </ComboBox>-->

                <TextBlock Text="Buy In" FontSize="16" HorizontalAlignment="Left"/>
                <Grid x:Name="BuyIn" Background="Transparent">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBox x:Name="BuyInAmount" Width="185" InputScope="Number" Grid.Row="0" Grid.Column="0" VerticalAlignment="Top" HorizontalAlignment="Left"></TextBox>
                    <Button Width="185" Content="Rebuy" Grid.Row="0" Grid.Column="1" Margin="0,0,10,0" VerticalAlignment="Top" HorizontalAlignment="Left"></Button>
                </Grid>
                <TextBlock Text="Note" FontSize="16" HorizontalAlignment="Left"/>
                <TextBox Width="400" Margin="0,0,10,0" VerticalAlignment="Top" HorizontalAlignment="Left"></TextBox>
                <Grid x:Name="breakInput" Background="Transparent" Margin="0,10,0,0" Visibility="Collapsed">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Session Duration" Grid.Column="0" FontSize="16" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                    <TextBox x:Name="DurationCounter" InputScope="Number" Text="0:00" Grid.Column="1" FontSize="16" HorizontalAlignment="Left" 
                             Width="185" Margin="0,0,10,0" IsReadOnly="True" Background="Transparent" TextAlignment="Center"/>
                </Grid>
                <StackPanel x:Name="sessionEndInput" Visibility="Collapsed">
                    <TextBlock Text="Start" FontSize="16" HorizontalAlignment="Left"/>
                    <Grid x:Name="Start" Background="Transparent">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition Width="200"/>
                        </Grid.ColumnDefinitions>
                        <DatePicker x:Name="startDate" Grid.Column="0"></DatePicker>
                        <TimePicker x:Name="startTime" Grid.Column="1"></TimePicker>
                    </Grid>
                    <TextBlock Text="End" FontSize="16" HorizontalAlignment="Left"/>
                    <Grid x:Name="End" Background="Transparent">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition Width="200"/>
                        </Grid.ColumnDefinitions>
                    
                        <DatePicker x:Name="endDate" Grid.Column="0"></DatePicker>
                        <TimePicker x:Name="endTime" Grid.Column="1"></TimePicker>
                    </Grid>

                    <TextBlock Text="Cashed Out ($)" FontSize="16" HorizontalAlignment="Left"/>
                    <TextBox x:Name="CashOutAmount" InputScope="Number" Width="400" VerticalAlignment="Top" Margin="0,0,0,30" HorizontalAlignment="Left"/>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>

