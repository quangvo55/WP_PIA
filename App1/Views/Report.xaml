<Page
    x:Class="App1.Views.Report"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:App1.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:valueconverter="using:App1.Utils"
    mc:Ignorable="d"     
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <Page.Resources>
        <valueconverter:TimespanToStringConverter x:Key="TimespanToStringConverter" />
    </Page.Resources>
    <StackPanel>

        <TextBlock Text="{Binding TotalDuration, Converter={StaticResource TimespanToStringConverter}}" FontSize="16" HorizontalAlignment="Left"/>
        <TextBlock Text="{Binding TotalProfit}" FontSize="16" HorizontalAlignment="Left"/>
    </StackPanel>
</Page>
